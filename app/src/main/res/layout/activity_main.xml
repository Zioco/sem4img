<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="3"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/im1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="#ed6b6b"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/im2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="#47dddd"
            android:layout_height="match_parent" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="3">

        <ImageView
            android:id="@+id/im3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="#81dd47"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/im4"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="#539eed"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/im5"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="#ddb047"
            android:layout_height="match_parent" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="3">

        <ImageView
            android:id="@+id/im6"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="#cbe84a"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/im7"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="#7647dd"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/im8"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="#dd7e47"
            android:layout_height="match_parent" />

    </LinearLayout>

</LinearLayout>
